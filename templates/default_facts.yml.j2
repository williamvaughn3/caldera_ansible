---
# Set Defaults 
ability_refresh: "{{ ability_refresh | default(60) }}"
api_key_blue: "{{ api_key_blue | default('BLUEADMIN123') }}"
api_key_red: "{{ api_key_red | default('ADMIN123') }}"
app.contact.dns.domain: "{{ app_contact_dns_domain | default('505cve.bde') }}"
app.contact.dns.socket: "{{ app_contact_dns_socket | default('0.0.0.0:8853') }}"
app.contact.gist: "{{ app_contact_gist | default('ghp_xxxxxxxxxxxxxxxxxxx') }}"
app.contact.html: "{{ app_contact_html | default('/weather') }}"
app.contact.http: "{{ app_contact_http | default('http://0.0.0.0:8888') }}"
app.contact.slack.api_key: "{{ app_contact_slack_api_key | default('SLACK_TOKEN') }}"
app.contact.slack.bot_id: "{{ app_contact_slack_bot_id | default('SLACK_BOT_ID') }}"
app.contact.slack.channel_id: "{{SLACK_CHANNEL_ID | default('SLACK_CHANNEL_ID') }}"
app.contact.tunnel.ssh.host_key_file: "{{ app_contact_tunnel_ssh_host_key_file | default('caldera/conf/ssh_keys/id_rsa') }}"
app.contact.tunnel.ssh.host_key_passphrase: "{{ app_contact_tunnel_ssh_host_key_passphrase | default('') }}"
app.contact.tunnel.ssh.socket: "{{ app_contact_tunnel_ssh_socket | default('0.0.0.0:8022') }}"
app.contact.tunnel.ssh.user_name: "{{ app_contact_tunnel_ssh_user_name | default('sandcat') }}"
app.contact.tunnel.ssh.user_password: "{{ app_contact_tunnel_ssh_user_password | default('s4ndc4t!') }}"
app.contact.ftp.host: "{{ app_contact_ftp_host | default('0.0.0.0') }}"
app.contact.ftp.port: "{{ app_contact_ftp_port | default('2222') }}"
app.contact.ftp.pword: "{{ app_contact_ftp_pword | default('caldera') }}"
app.contact.ftp.server.dir: "{{ app_contact_ftp_server_dir | default('ftp_dir') }}"
app.contact.ftp.user: "{{ app_contact_ftp_user | default('caldera_user') }}"
app.contact.tcp: "{{ app_contact_tcp | default('0.0.0.0:7010') }}"
app.contact.udp: "{{ app_contact_udp | default('0.0.0.0:7011') }}"
app.contact.websocket: "{{ app_contact_websocket | default('0.0.0.0:7012') }}"
objects.planners.default: "{{ objects_planners_default | default('atomic') }}"
crypt_salt: "{{ crypt_salt | default('REPLACE_WITH_RANDOM_VALUE') }}"
encryption_key: "{{ encryption_key | default('ADMIN123') }}"
exfil_dir: "{{ exfil_dir | default('/tmp/caldera') }}"
host: "{{ host | default('0.0.0.0') }}"
plugins: "{{ plugins | default([access,atomic,build,compass,debrief,pathfinder,fieldmanual,manx,response,sandcat,stockpile]) }}"
port: "{{ contact_port | default('8888') }}"
reports_dir: "{{ reports_dir | default('/tmp/caldera') }}"
auth.login.handler.module: "{{ auth_login_handler_module | default('app.utility.auth_handlers.CalderaAuthHandler') }}"
requirements:
  go:
    command: go version
    type: installed_program
    version: 1.11
  python:
    attr: version
    module: sys
    type: python_module
    version: 3.7.0
users:
  blue:
    blue: "{{ caldera_blue_password }}"
  red:
    admin: "{{ caldera_admin_password }}"
    red: "{{caldera_red_password}}"


